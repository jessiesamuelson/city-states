<h1>New Trade Deal</h1>

<%= form_for(@trade_deal) do |form| %>
  <%= render form %>
   <div class="field">
    <%= form.label :country_resource_id %><br>
    <%= form.select :country_resource_id, CountryResource.all.collect { |r| [Resource.find(r.resource_id).name + ' from ' + Country.find(r.country_id).name.titleize, r.id]} %>
  </div>

  <div class="field">
    <%= form.label :quantity %><br>
    <%= form.number_field :quantity%>
  </div>

  <div class="field">
    <%= form.label :cost %><br>
    <%= form.number_field :cost, in: 1..current_player.country.wealth  %>
  </div>
  <div class="actions">
    <%= form.submit "Create Trade Deal!" %>
  </div>
<% end %>

<%= link_to 'Back', trade_deals_path %>
