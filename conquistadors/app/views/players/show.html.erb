<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @player.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @player.title %>
</p>

<p>
  <strong>Email:</strong>
  <%= @player.email %>
</p>
<% if @player.country %>
  <p>
    <strong>Country:</strong>
    <%= @player.country.name %>
  </p>
<% end %>

<% if @player.country %>
  <%= link_to 'Your Country', player_country_path(@player, @country.id) %>
<% else %>
  <%= link_to 'Create Country', new_player_country_path(@player) %>
<% end %>
<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
